<head>
  <link rel="stylesheet" href = "//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/condition/new.css">
</head>

<div class="transbox">
  <form class="form-horizontal">
    <fieldset>
      <legend>New Weather Conditions Report</legend>
      <div class="control-group">
        <label class="control-label">Date</label>
        <div class="controls">
          <input type="date" name ="weather[date]" placeholder="date">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Temperature High</label>
        <div class="controls">
          <input type="integer" name ="weather[max_temperature]" placeholder="high">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Temperature Low</label>
        <div class="controls">
          <input type="integer" name ="weather[min_temperature]" placeholder="low">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Mean Humidity</label>
        <div class="controls">
          <input type="integer" name ="weather[mean_humidity]" placeholder="humidity">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Mean Visibility (miles)</label>
        <div class="controls">
          <input type="integer"  name ="weather[mean_visibility]" placeholder="visibility (miles)">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Mean Wind Speed (mph)</label>
        <div class="controls">
          <input type="integer" name ="weather[mean_wind_speed]" placeholder="wind speed (mph)">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Precipitation (inches)</label>
        <div class="controls">
          <input type="integer" name ="weather[precipitation]" placeholder="precipitation (inches)">
        </div>
      </div>
      <br>
      <div class="control-group">
        <div class="controls">
          <button type="submit" class="btn btn-info">Add New Trip</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>
