<head>
  <link rel="stylesheet" href = "//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/condition/new.css">
</head>

<div class="transbox">
  <form class="form-horizontal" action="/stations/<%= @trips.id %>" method="post">
    <input type="hidden" name="_method" value="PUT" />
    <fieldset>
      <legend>Edit Weather Conditions Report</legend>
      <div class="control-group">
        <label class="control-label"/>Date</label>
        <div class="controls">
          <input type="date" name ="weather[date]" value="<%= @conditions.date %>" placeholder="date">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label"/>Temperature High</label>
        <div class="controls">
          <input type="integer" name ="weather[max_temperature]" value="<%= @conditions.max_temperature %>" placeholder="high">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label"/>Temperature Low</label>
        <div class="controls">
          <input type="integer" name ="weather[min_temperature]" value="<%= @conditions.min_temperature %>" placeholder="low">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label"/>Mean Humidity</label>
        <div class="controls">
          <input type="integer" name ="weather[mean_humidity]" value="<%= @conditions.mean_humidity %>" placeholder="humidity">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label"/>Mean Visibility (miles)</label>
        <div class="controls">
          <input type="integer" name ="weather[mean_visibility]" value="<%= @conditions.mean_visibility %>" placeholder="visibility (miles)">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label"/>Mean Wind Speed (mph)</label>
        <div class="controls">
          <input type="integer" name ="weather[mean_wind_speed]" value="<%= @conditions.mean_wind_speed %>" placeholder="wind speed (mph)">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label"/>Precipitation (inches)</label>
        <div class="controls">
          <input type="integer" name ="weather[precipitation]" value="<%= @conditions.precipitation %>" placeholder="precipitation (inches)">
        </div>
      </div>
      <br>
      <div class="control-group">
        <div class="controls">
          <button type="submit" class="btn btn-info">Save Changes</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>
