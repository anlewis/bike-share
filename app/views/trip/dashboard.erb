<head>
  <title>Trip Dashboard</title>
  <link rel="stylesheet" href = "//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="trip/dashboard.css">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
<div class="container-fluid bg-1 text-center">
  <h1> Trip Dashboard</h1>
</div>
  <div class="row">
    <div class="col-sm-2">
      <div class="well">
        <h4>Average Ride</h4>
          <p><%= @trips.average_ride %> minutes</p>
      </div>
    </div>
    <div class="col-sm-2" >
      <div class="well">
        <h4>Longest Ride</h4>
        <p><%= @trips.longest_ride %> days</p>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="well">
        <h4>Shortest Ride</h4>
        <p><%= @trips.shortest_ride %> minute</p>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="well">
        <h4>Most Popular Start Station</h4>
            <p><%= @trips.highest_starting_place %></p>
      </div>
    </div>
    <div class="col-sm-3">
        <div class="well">
          <h4>Most Popular End Station</h4>
              <p><%= @trips.highest_ending_place %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="well">
        <h4>January</h4>
          <p><%= @trips.monthly_rides(1) %> rides</p>
          <p>2013 <%=@trips.yearly_rides(1, 2013) %></p>
